generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  nomeCompleto String
  cpf_cnpj     String     @unique
  email        String     @unique
  senha        String
  logista      Boolean    @default(false)
  saldo        Int        @default(0)
  deposito     Deposito[]
  Saque        Saque[]

  @@map("users")
}

model Deposito {
  id      Int      @id @default(autoincrement())
  usuario User     @relation(fields: [user_id], references: [id])
  user_id Int
  data    DateTime @default(now())
  valor   Int

  @@map("depositos")
}

model Saque {
  id      Int      @id @default(autoincrement())
  usuario User     @relation(fields: [user_id], references: [id])
  user_id Int
  data    DateTime @default(now())
  valor   Int

  @@map("saques")
}
